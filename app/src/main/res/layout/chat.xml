<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fem_btn"
        android:layout_width="289dp"
        android:layout_height="76dp"
        android:background="@drawable/btnbak"
        android:text="Female"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/anyone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.961" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/anyone"
        android:layout_width="289dp"
        android:layout_height="76dp"
        android:layout_marginTop="416dp"
        android:background="@drawable/btnbak"
        android:text="Anyone"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/male_btn"
        android:layout_width="289dp"
        android:layout_height="76dp"
        android:layout_marginTop="236dp"
        android:background="@drawable/btnbak"
        android:text="Male"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/fem_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Who you waant chat with"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.127" />

</androidx.constraintlayout.widget.ConstraintLayout>